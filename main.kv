#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import WipeTransition kivy.uix.screenmanager.WipeTransition

# Screen define section
Screen_Manager:
    id: scr_manager
    #transition: WipeTransition()
    transition: FadeTransition()
    Login:
    Registration:
    MainPage:
    TaskPage:
    TaskDetailPage:
    All_Tasks:
    Task_Stats:
#Custom button designs
<CustButton@MDRectangleFlatButton>:
    font_size: 14
    bold: True
    size_hint_x: 0.18
#Custom Field designs
<InputField@MDTextField>:
    #font_size: 21
    pos_hint: {"center_x": 0.5}
    multiline: False
    size_hint: 0.6, None
    font_family: "Impact"#"Times New Roman"
    hint_text_color: (180/255.0,180/255.0,180/255.0,1)
    disabled_foreground_color: (1,1,1,1)
    line_color_focus: '#654eb6'
    #line_color_normal: '#654eb6'
    hint_text_color_focus: '#654eb6'
    text_color_focus: '#654eb6'
    write_tab: False
#Custom field designs with Icon
<TextFieldWithIcon>:
    size_hint_y: None
    height: text_field.height

    InputField:
        id: text_field
        hint_text: root.hint_text
        helper_text: "Date Format --> 2000-01-31"
        helper_text_mode: "persistent"

    MDIconButton:
        icon: root.icon
        pos_hint: {"center_y": .5}
        pos: text_field.width + (self.width*1.5), 0
        theme_text_color: 'Custom'
        text_color: '#654eb6'
        on_release: app.show_date_picker(text_field) if text_field.hint_text != 'Attach Image...' else app.browser()

#Custom Radio button designs
<RadioButton>:
    adaptive_height: True
    # check box
    MDCheckbox:
        id: range_val
        group: root.group
        size_hint: None, None
        size: dp(35), dp(35)
        pos_hint: {'center_y': 0.5}
        color_active: '#654eb6'
        color_inactive: '#654eb6'
        on_active: app.root.get_screen('Task').set_range_level(range.text, self.group) if self.active else None
    # label
    MDLabel:
        id: range
        text: root.text
        size_hint: None, None
        adaptive_width: True
        bold: True
        theme_text_color: 'Custom'
        text_color: '#654eb6'


<Task_View>:
    text: root.text  #"One-line item"
    theme_text_color: 'Custom'
    text_color: '#654eb6'
    divider_color: '#654eb6'
    # left icon
    IconLeftWidget:
        icon: "calendar-check"
        theme_text_color: 'Custom'
        text_color: root.color
# Custom Task Card designs
<Task_Card>:
    radius: [30,]
    adaptive_height: True
    size_hint_y: None
    md_bg_color: root.color
    padding: 50, 0
    spacing: 30
    # icon
    MDIcon:
        icon: 'circle-outline'
        pos_hint: {'center_y': 0.5}
        theme_text_color: "Custom"
        text_color: 'white'
    # label
    MDLabel:
        text: root.text
        font_size: self.width*0.04
        bold: True
        pos_hint: {'center_y': 0.5}
        adaptive_height: True
        size_hint_y: None
        theme_text_color: "Custom"
        text_color: 'white'


